<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.zerock.mapper.GoogleMapper">
  	
  	<!-- google_id로 사용자 조회 -->
	<select id="findUserByGoogleId" resultType="org.zerock.dto.GoogleMemberDTO">
    	SELECT * FROM google_member_test
    	WHERE google_id = #{id}
	</select>

	<!-- 새 사용자 등록 -->
	<insert id="insertUser">
    	INSERT INTO google_member_test (google_id, name, email)
    	VALUES (#{id}, #{name}, #{email})
	</insert>
  	<!-- //push -->
  </mapper>