<?xml version="1.0" encoding="UTF-8"?>
<!-- 해당 xml 파일을 mapper 로 활용 선언 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- mapper namespace="패키지명과 인터페이스명"으로 연결  -->

<mapper namespace="org.zerock.mapper.KakaoMapper">

	<select id="klogin" resultType="java.lang.Integer">
    	select count(*) from member where id=#{id}
	</select>
	
	<select id="kloginGo" resultType="org.zerock.dto.MemberDTO">
    	select * from member where id=#{id}
	</select>
	
	<insert id="kjoin" parameterType="org.zerock.dto.MemberDTO">
	    INSERT INTO member (id, email, kind)
	    VALUES (#{id}, #{email}, "카카오")
	</insert>
	
</mapper>